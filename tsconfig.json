{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "./dist",
    "types": ["reflect-metadata"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "es2017",
      "dom",
      "esnext",
      "esnext.asynciterable"
    ],
    "baseUrl": "",
    "paths": {
      "*": [
        "typings/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}